{
    "$schema": "alac.schema.json",
    "general": {
        "working_directory": "C:/Users/User/",
        "import": [
            "themes/tokyonight.toml"
        ]
    },
    "window": {
        "padding": {
            "x": 10,
            "y": 10
        }
    },
    "font": {
        "normal": {
            "family": "JetBrainsMono Nerd Font"
        },
        "size": 15
    },
    "terminal": {
        "shell": {
            "program": "nu.exe"
        }
    },
    "bell": {
        "animation": "Linear"
    },
    "mouse": {
        "hide_when_typing": true
    },
    "debug": {
        "renderer": {
            "glsl3": true
        }
    },
    "seltools": {
        "enabled": true,
        "parse_json": true,
        "hint_width": 40
    }
}